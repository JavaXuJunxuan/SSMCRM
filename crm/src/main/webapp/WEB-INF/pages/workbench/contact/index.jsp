	function queryContactsByConditionForPage(pageNo, pageSize) {
		//收集参数
		var owner = $("#query-owner").val();
		var fullname = $("#query-name").val();
		var customserId = $("#query-customserId").val();
		var source = $("#query-source").val();
		var birthday = $("#query-birthday").val();
		var pageNo = pageNo;
		var pageSize = pageSize;
		$.ajax({
			url: "workbench/contact/queryContactsByConditionForPage.do",
			type: "post",
			data: {
				owner:owner,
				fullname:fullname,
				customserId:customserId,
				source:source,
				birthday:birthday,
				pageNo : pageNo,
				pageSize : pageSize
			},
			dataType : "json",
			success: function (data){
				var html = "";
				$.each(data.contactsList,function (index,obj){
					html += "<tr class=\"active\">";
					html += "<td><input type=\"checkbox\" value=\""+obj.id+"\"/></td>";
					html += "<td><a style=\"text-decoration: none; cursor: pointer;\" onclick=\"window.location.href='workbench/activity/detailActivity.do?id="+obj.id+"'\">"+obj.fullname+"</a></td>";
					html += "<td>"+obj.customerId+"</td>";
					html += "<td>"+obj.owner+"</td>";
					html += "<td>"+obj.source+"</td>";
					html += "<td>"+obj.birthday+"</td>";
					html += "</tr>";
				})
				$("#tBody").html(html);
				//取消"全选"按钮
				$("#checkAll").prop("checked",false);
				//计算总页数
				var totalPages = 1;
				if(data.totalRows % pageSize == 0){
					totalPages = data.totalRows / pageSize;
				}else{
					totalPages = parseInt(data.totalRows / pageSize) + 1;
				}
				$("#demo_pag1").bs_pagination({
					currentPage:pageNo,//当前页号,相当于pageNo
					rowsPerPage:pageSize,//每页显示条数,相当于pageSize
					totalRows:data.totalRows,//总条数
					totalPages:totalPages,//总页数,必填参数.
					visiblePageLinks:5,//最多可以显示的卡片数
					showGoToPage:true,//是否显示"跳转到"部分,默认true--显示
					showRowsPerPage:true,//是否显示"每页显示条数"部分。默认true--显示
					showRowsInfo:true,//是否显示记录的信息，默认true--显示
					//用户每次切换页号，都自动触发本函数;
					//每次返回切换页号之后的pageNo和pageSize
					onChangePage: function(event,pageObj) { // returns page_num and rows_per_page after a link has clicked
						queryContactsByConditionForPage(pageObj.currentPage,pageObj.rowsPerPage);
					}
				});
			}
		});
	}
	
